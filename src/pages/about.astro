---
import Content from '~/components/widgets/Content.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>

<Content
    id="about"
    image={{
      src: '~/assets/images/mark.jpg',
      alt: 'Mark Powers',
      loading: 'eager',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">The Groom: Mark Powers</h2>
      <p>
        First paragraph on Mark
      </p>
      <br />
      <p>
        Second paragraph on Mark
      </p>
      <br />
      <p>Third paragraph on Mark</p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 dark:bg-transparent"></div>
    </Fragment>
  </Content>

 <Content
    isReversed
    image={{
      src: '~/assets/images/christina.jpg',
      alt: 'Christina Bejjani',
      loading: 'eager',
    }}
  >
    <Fragment slot="content"><h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">The Bride: Christina Bejjani</h2>
      <p>
        First paragraph on Christina
      </p>
      <br />
      <p>
        Second paragraph on Christina
      </p>
      <br />
      <p>Third paragraph on Mark</p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>


</Layout>
